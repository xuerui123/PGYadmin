html
    head
        meta(charset='utf-8')
        title
        link(rel='stylesheet',href='/css/common.css')
        link(rel='stylesheet',href='/css/others.apply.css')
        script(src='https://cdn.bootcss.com/vue/2.6.0/vue.js')
        script(src='https://cdn.bootcss.com/jquery/2.0.1/jquery.min.js')
        script(src='../JavaScript/common/swal.js')
        script(src='../JavaScript/common/mutual.js')
    body
        div#VueBox
            include ../common/top
            include ../common/nav
            div.applyList
                table
                    thead
                        tr
                            th 姓名
                            th 电话
                            th 邮箱
                            th 地区
                            th 需求
                            th 申请时间
                            th 操作
                    tbody
                        tr(v-for='item in list')
                            td(v-text='item.truename')
                            td(v-text='item.phone')
                            td(v-text='item.email')
                            td(v-text='item.area')
                            td(v-text='item.content')
                            td(v-text='item.addtime')
                            td.operation
                                //span(@click='edit(item)') 已读
                                span(@click='del(item.account)') 删除

    script(src='../JavaScript/others/apply.js')