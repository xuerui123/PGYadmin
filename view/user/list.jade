html
    head
        meta(charset='utf-8')
        title
        link(rel='stylesheet',href='/css/common.css')
        link(rel='stylesheet',href='/css/user.list.css')
        script(src='https://cdn.bootcss.com/vue/2.6.0/vue.js')
        script(src='https://cdn.bootcss.com/jquery/2.0.1/jquery.min.js')
        script(src='../JavaScript/common/swal.js')
        script(src='../JavaScript/common/mutual.js')
    body
        div#VueBox
            include ../common/top
            include ../common/nav
            div.add
                span.rf.btn.btn-success
                    a(href='/user/add') 添加用户
            div.userList
                table
                    thead
                        tr
                            th 用户名
                            th 前端接口调用
                            th 手机号
                            th 邮箱
                            th 地址
                            th 最后登录时间
                            th 状态
                            th 操作
                    tbody
                        tr(v-for="item in list")
                            td(v-text='item.name')
                            td(v-text='item.infrared')
                            td(v-text='item.phone')
                            td(v-text='item.email')
                            td(v-text='item.place')
                            td(v-text='item.last_login_time')
                            td.status
                                span(v-text='item.status==1?"正常":"冻结"',:class='item.status==1?"lable-success":"lable-warning"')
                            td.operation
                                span(v-if='item.status==1',@click='forbiddenUser(item.account)') 冻结
                                span(v-if='item.status==0') 恢复
                                span(@click='edit(item)') 编辑
                                span(@click='del(item.account)') 删除

    script(src='../JavaScript/user/list.js')